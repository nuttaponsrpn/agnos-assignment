{
  "parser": "@typescript-eslint/parser",
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": ["readable-tailwind"],
  "rules": {
    "readable-tailwind/multiline": [
      "warn",
      {
        "printWidth": 120,
        "group": "never",
        "preferSingleLine": true,
        "lineBreakStyle": "unix",
        "classAttributes": ["class", "className"]
      }
    ]
  }
}
